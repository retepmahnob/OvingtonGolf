<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when the row is selected -->
    <item android:drawable="@color/accent" android:state_pressed="false" android:state_selected="true" />
    <item android:drawable="@color/primary" android:state_pressed="true" android:state_selected="false" />
